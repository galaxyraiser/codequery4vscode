{
	"name": "codequery4vscode",
	"displayName": "codequery4vscode",
	"description": "CodeQuery extension for VSCode",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:codequery4vscodeResults",
		"onCommand:codequery4vscode.searchSymbolFromSelection",
		"onCommand:codequery4vscode.searchSymbolFromInputText"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "codequery4vscode.refreshResults",
				"title": "CodeQuery:Refresh results",
				"category" : "CodeQuery"
			},
			{
			  "command": "codequery4vscode.searchSymbolFromInputText",
			  "title": "CodeQuery:Search symbol",
			  "category" : "CodeQuery"
			},
			{
			  "command": "codequery4vscode.searchSymbolFromSelection",
			  "title": "CodeQuery:Search symbol (from selection)",
			  "category" : "CodeQuery"
			}
		],		
		"menus": {
		  "commandPalette": [
			{
			  "command": "codequery4vscode.searchSymbolFromInputText",
			  "when": "!editorHasSelection",
			  "title": "CodeQuery:Search symbol",
			  "group" : "CodeQuery"
			},
			{
			  "command": "codequery4vscode.searchSymbolFromSelection",
			  "when": "false",
			  "title": "CodeQuery:Search symbol (from selection)",
			  "group" : "CodeQuery"
			}
		  ],
		  "editor/context": [
			{
			  "command": "codequery4vscode.searchSymbolFromSelection",
			  "when": "editorTextFocus && editorHasSelection",
			  "title": "CodeQuery:Search symbol (from selection)",
			  "group" : "CodeQuery"
			}
		  ],
		  "view/title": [
			{
			  "command": "codequery4vscode.refreshResults",
			  "when": "view == codequery4vscodeResults",
			  "title": "codequery4vscodeResults",
			  "group" : "CodeQuery"
			}
		  ]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "codequery4vscodeResultsContainer",
					"title": "CodeQuery4VSCode",
					"icon": "media/cq.svg"
				}
			]
		},
		"views": {
			"codequery4vscodeResultsContainer": [
				{
					"id": "codequery4vscodeResults",
					"name": "CodeQuery Results"
				}
			]
		}
	  },
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.26.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
